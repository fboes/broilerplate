{
  "name": "broilerplate",
  "description": "A boilerplate with SASS & JS.",
  "version": "3.0.1",
  "repository": {
    "type": "git",
    "url": "git@github.com:fboes/broilerplate.git"
  },
  "devDependencies": {
    "autoprefixer": "^9.5.1",
    "beeper": "^1.1.1",
    "browser-sync": "^2.26.5",
    "eslint": "^6.0.1",
    "gulp": "^4.0.2",
    "gulp-clone": "^2.0.1",
    "gulp-concat": "^2.6.1",
    "gulp-eslint": "^5.0.0",
    "gulp-image-resize": "^0.13.0",
