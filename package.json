  "license": "MIT",
  "private": false,
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "rules": {},
    "globals": {},
    "extends": "eslint:recommended"
  },
  "eslintIgnore": [],
  "stylelint": {
    "extends": "stylelint-config-recommended-scss",
    "rules": {
      "no-descending-specificity": null,
      "block-no-empty": null
