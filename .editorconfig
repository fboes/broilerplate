# editorconfig.org

root = true

[*]
charset = utf-8
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
tab_width = 4

[*.{yml,json,sh,conf,css}]
indent_style = space
indent_size = 2

[{package.json,bower.json,**/*.css,gulpfile.js,Gruntfile.js,.jshintrc}]
indent_style = space
indent_size = 2
